<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:fontFamily="@font/litsans"/>

    <EditText
        android:id="@+id/dialogueVN"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="vehicle name"
        android:fontFamily="@font/litsans"
        android:background="@drawable/custom_edit_txt"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/dialogueNP"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Number plate"
        android:fontFamily="@font/litsans"
        android:background="@drawable/custom_edit_txt"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/dialogueSN"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Sacco name"
        android:fontFamily="@font/litsans"
        android:background="@drawable/custom_edit_txt"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/dialogueSS"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:hint="Say something"
        android:fontFamily="@font/litsans"
        android:background="@drawable/custom_edit_txt"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        >

        <Button
            android:id="@+id/dialogueIgnoreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle"
            android:text="ignore"
            android:textColor="#fff"
            android:fontFamily="@font/litsans"/>
        <Button
            android:id="@+id/dialogueReportBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle2"
            android:text="Report"
            android:textColor="#fff"
            android:fontFamily="@font/litsans"/>
    </LinearLayout>


</LinearLayout>