<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.humungus.safaricare.activities.SignUpActivity"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:background="@drawable/sign"
            android:padding="50dp">

            <TextView
                android:fontFamily="@font/litsans"
                android:id="@+id/txtwelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="27dp"
                android:textColor="#23283d"
                android:text="Signup For SafariCare"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>




        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <EditText
                android:id="@+id/signupusername"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="set username"
                android:fontFamily="@font/litsans"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"/>

            <EditText
                android:id="@+id/signupemail"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="set email"
                android:fontFamily="@font/litsans"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                />
            <EditText
                android:id="@+id/signuppassword"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:fontFamily="@font/litsans"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
              />
            <Button
                android:id="@+id/signupbtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/litsans"
                android:text="sign up"
                android:background="@drawable/buttonstyle2"
                android:textColor="#fff"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
